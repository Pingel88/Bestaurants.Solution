@{
  Layout = "_Layout";
}

@using Bestaurants.Models;
@model List<Bestaurants.Models.Cuisine>;

<h1>Cuisine</h1>

@if (@Model.Count == 0)
{
  <h3>No Cuisine Added Yet!</h3>
}

<ul>
  @foreach(Cuisine element in Model)
  {
    <li>@Html.ActionLink($"{element.Name}", "Details", new {id = element.CuisineId})</li>
  }
</ul>

<p>@Html.ActionLink("Add new cuisine", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>