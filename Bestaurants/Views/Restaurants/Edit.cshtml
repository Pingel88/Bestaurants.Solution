@{
  Layout = "_Layout";
}

@model Bestaurants.Models.Restaurant

<h2>Edit</h2>

<h4> Edit this Restaurant: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.RestaurantId)
  @Html.LabelFor(model => model.Name)
  @Html.EditorFor(model => model.Name)
  @Html.LabelFor(model => model.Delivery)
  @Html.EditorFor(model => model.Delivery)

  @Html.LabelFor(model => model.Cuisine)
  @Html.DropDownList("CuisineId")

  <input type="submit" value="Save" class="btn btn-danger" />
}

<p>@Html.ActionLink("Back to list", "Index")</p>